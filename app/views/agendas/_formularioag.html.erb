<%= form_for(@agenda, :html => {:role => 'form'}) do |f| %>
  <% if @agenda.errors.any? %>
    <%= pluralize(@agenda.errors.count, "Errores") %>
    <% @agenda.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

  <h1>Crear Comentario</h1>

  <p>
    <%= f.label :usuario %>
    <%= f.select('usuario_id',
                 Usuario.all.collect {|c| [c.nombres, c.id]}) %>
  </p>
  <p>
    <%= f.label :estudiante %>
    <%= f.select('estudiante_id',
                 Estudiante.all.collect {|c| [c.nombres, c.id]}) %>
  <p>
  <%= f.label :comentario %>
  <%= f.text_field :comentario %>
  </p>
  <p>
  <%= f.label :fecha %>
  <%= f.text_field :fecha %>
  </p>
  <%= f.submit 'Guardar comentario'%>
<% end %>