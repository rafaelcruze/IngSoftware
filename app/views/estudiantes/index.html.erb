<body></body>
<div class="container">
  <div class="derecha">
    <h1><a href="/estudiantes.pdf"><i class="fas fa-file-pdf"></i></a></h1>
<a href="/estudiantes/nuevo" class="btn btn-success btn-lg" role="button" aria-pressed="true">Nuevo</a>
</div>

  <%= form_tag estudiantes_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <%end %>

<table class="table table-condensed table-bordered">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Rut</th>
    <th>Estado</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @estudiantes.each do |estudiante| %>
    <tr>
      <td><%= estudiante.nombreuno %></td>
      <td><%= estudiante.apellidouno %></td>
      <td><%= estudiante.rut %></td>
      <td><%= estudiante.estado %></td>
      <td><%= link_to 'Mostrar', estudiante_url(estudiante), class: "btn btn-primary" %></td>
      <td><%= link_to 'Editar', editar_estudiante_url(estudiante), class: "btn btn-warning" %></td>
      <% if estudiante.estado == true %>
      <td><%= link_to 'Cambiar estado', estudiante_path(estudiante), class: "btn btn-danger",
                      method: :delete, data: {confirm: 'Â¿Estas seguro?'} %></td>
                      <% end %>
    </tr>
    <%end%>

  </tbody>
</table>
</div>
</body>
</html>
