<%= form_for(@estudiante, :html => {:role => 'form'}) do |f| %>
  <% if @estudiante.errors.any? %>
    <%= pluralize(@estudiante.errors.count, "Errores") %>
    <% @estudiante.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

<div class="form">
  <h1 class="text-center"> Registro de Estudiante</h1>
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= f.label :nombres %>
        <%= f.text_field :nombres, class: "form-control", placeholder: "Nombres" %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= f.label :apellidos %>
        <%= f.text_field :apellidos, class: "form-control", placeholder: "Apellidos" %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= f.label :rut %>
        <%= f.text_field :rut, class: "form-control", placeholder: "Rut" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= f.label :fecha_nacimiento %>
        <%= f.text_field :fecha_nacimiento, class:"form-control", placeholder: "Fecha de nacimiento"%>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= f.label :direccion %>
        <%= f.text_field :direccion, class: "form-control", placeholder: "Direccion" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">

        <%= f.label :comuna %>
        <%= f.select('comuna_id',
                     Comuna.all.collect {|c| [c.descripcion, c.id]}, class: "form-control") %>

    </div>
    <div class="col">
        <%= f.label :nivel_educacional %>
        <%= f.select('nivel_educacional_id',
                     NivelEducacional.all.collect {|c| [c.descripcion, c.id]}) %>
    </div>

    <div class="col">
      <%= f.label :jornada %>
      <%= f.select('jornada_id',
                   Jornada.all.collect {|c| [c.descripcion, c.id]}) %>
    </div>

    <div class="col">
      <%= f.label :apoderado%>
      <%= f.select('apoderado_id',
                   Apoderado.all.collect {|c| [c.nombres, c.id]}) %>
    </div>
  </div>
</div>
  <div class="btn">
  <%= f.submit 'Guardar Estudiante'%>
  </div>
<% end %>