<%= form_for(@estudiante, :html => {:role => 'form'}) do |f| %>
  <% if @estudiante.errors.any? %>
    <%= pluralize(@estudiante.errors.count, "Errores") %>
    <% @estudiante.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

  <h1>Registro de Estudiante</h1>

    <p>
      <%= f.label :nombres %>
      <%= f.text_field :nombres %>
    </p>

  <p>
    <%= f.label :apellidos %>
    <%= f.text_field :apellidos %>
  </p>

  <p>
    <%= f.label :rut %>
    <%= f.text_field :rut %>
  </p>

  <p><%= f.label :fecha_nacimiento %>
    <%= f.text_field :fecha_nacimiento %>
  </p>

  <p>
    <%= f.label :direccion %>
    <%= f.text_field :direccion %>
  </p>

  <p>
    <%= f.label :comuna %>
    <%= f.select('comuna_id',
                 Comuna.all.collect {|c| [c.descripcion, c.id]}) %>
  </p>

  <p>
    <%= f.label :nivel_educacional %>
    <%= f.select('nivel_educacional_id',
                 NivelEducacional.all.collect {|c| [c.descripcion, c.id]}) %>
  </p>

  <p>
    <%= f.label :jornada %>
    <%= f.select('jornada_id',
                 Jornada.all.collect {|c| [c.descripcion, c.id]}) %>
  </p>

  <p>
    <%= f.label :apoderado %>
    <%= f.select('usuario_id',
                 Usuario.all.collect {|u| [u.nombres, u.id]}) %>
  </p>

  <%= f.submit 'Guardar Estudiante'%>
<% end %>