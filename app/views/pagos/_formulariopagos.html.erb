<%= form_for(@pago, :html => {:role => 'form'}) do |f| %>
  <% if @pago.errors.any? %>
  <div class="alert alert-info">
    <%= pluralize(@pago.errors.count, "Errores") %>
  </div>
  <div class="alert alert-danger">
    <% @pago.errors.full_messages.each do |error| %>
      <%= error %><br>
    <% end %>
  </div>
  <% end %>

  <h1>Registro de Pagos</h1>
 
 <div class="form">
   <div class="field"><br>
    <%= f.label :apoderado, autofocus: true %>
    <%= f.select('user_id',
                 User.all.collect {|c| [c.nombreuno, c.id]}) %>
   </div>

  <div class="field"><br>
    <%= f.label :estudiante,autofocus: true %>
    <%= f.select('estudiante_id',
                 Estudiante.all.collect {|c| [c.nombreuno, c.id]}) %>
  </div>

  <div class="field"><br>
    <%= f.label :valor, autofocus: true, placeholder: "Valor" %>
    <%= f.text_field :valor %>
  </div>

  <div class="field"><br>
    <%= f.label :abono,autofocus: true, placeholder: "Abono" %>
    <%= f.text_field :abono %>
  </div>

  <div class="field"><br>
    <%= f.label :fecha_pago %>
    <%= f.date_field :fecha_pago %>
  </div>


  <div class="field"><br>
    <%= f.label :estado %>
    <%= f.select('estado_id',
               Estado.all.collect { |c| [c.descripcion, c.id] }) %>
  </div>

  <div class="field"><br>
    <%= f.label :tipopago %>
    <%= f.select('tipo_pago_id',
               TipoPago.all.collect { |c| [c.descripcion, c.id] }) %>
  </div>
</div>
<div class="actions"><br>
  <%= f.submit 'Guardar Pago', class:"btn btn-success"%>
</div>
<% end %>
