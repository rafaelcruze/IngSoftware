<%= form_for(@apoderado, :html => {:role => 'form'}) do |f| %>
  <% if @apoderado.errors.any? %>
    <%= pluralize(@apoderado.errors.count, "Errores") %>
    <% @apoderado.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

  <h1>Registrar Apoderado</h1>
  <p>
    <%= f.label :nombres %>
    <%= f.text_field :nombres %>
  </p>
  <p>
    <%= f.label :apellidos %>
    <%= f.text_field :apellidos %>
  </p>
  <%= f.label :rut %>
  <%= f.text_field :rut %>
  <p>
    <%= f.label :fecha_nacimiento %>
    <%= f.text_field :fecha_nacimiento %>
  </p>
  <p>
    <%= f.label :direccion %>
    <%= f.text_field :direccion %>
  </p>
  <p>
    <%= f.label :celular %>
    <%= f.text_field :celular %>
  </p>
  <p>
    <%= f.label :comuna %>
    <%= f.select('comuna_id',
                 Comuna.all.collect { |u| [u.descripcion, u.id] }) %>
  </p>

  <%= f.submit 'Guardar apoderado'%>
<% end %>