<h1>Foro Consultas</h1>

<%= link_to 'Nueva Consulta', new_question_path, class:"btn btn-primary" %>
<br>
<br>

<% @questions.each do |question| %>

  <div style="border: 1px solid black; background-color: #add8e6;">
      <h3> <%= question.content %> </h3>
      <br>

      
      <%= link_to 'Editar', edit_question_path(question) %>
     

     
      <%= link_to 'Eliminar', question, method: :delete, data: {confirm: "EstÃ¡s seguro?"} %>
      


      <% if question.answers.any? %>

        <h4> Answers</h4>

        <%= render question.answers %>

        <% end %>

        <br>

        <p> Respuestas</p>
        <%= form_for([question, question.answers.build]) do |f| %>
        <%= f.text_area :content %>
        <%= submit_tag "Agregar " %>
        <% end %>
      </div>
      <br>
      <br>

    <% end %>